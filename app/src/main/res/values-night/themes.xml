<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Polly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Pink</item>
        <item name="colorPrimaryVariant">@color/Pink</item> <!--Status bar-->
        <item name="colorOnPrimary">@color/white</item> <!--Button text-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SkyBlue</item><!--Textfield-->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/Pink</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/Gray</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Polly.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Polly.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Polly.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>